@model ImmovableProperty

<div>
    <div class="thumbnail">
        <div class="row">
            <div class="col-md-6">
                <img alt="@Model.District" src="@Model.Image" height="500" width="500" />
            </div>
            <div class="col-md-6">
                <h3>@Model.Area - @Model.Price</h3>
                <h4>@Model.Place</h4>
                <h4>@Model.Street</h4>
                <p>@Model.Description</p>
                <h2>Na pewno chcesz usunąć?</h2>
                <h4 class="pull-right">
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id" />
                        <input type="submit" value="Usuń" class="btn btn-default" />
                        <a asp-action="Index" class="btn btn-default">Powrót</a>
                    </form>
                </h4>
            </div>
        </div>
    </div>
</div>